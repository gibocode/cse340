<div class="user-content">
    <h2>
        <svg fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M20,10a3,3,0,1,0-3,3A3,3,0,0,0,20,10Zm-4,0a1,1,0,1,1,1,1A1,1,0,0,1,16,10Z"/>
            <path d="M17,14a5,5,0,0,0-3.56,1.48A6,6,0,0,0,2,18v3H22V19A5,5,0,0,0,17,14Zm-3,5a3,3,0,0,1,6,0Z"/>
            <circle cx="8" cy="7" r="4"/>
        </svg>
        <%= title %>
    </h2>
    <div>
        <%- messages() %>
        <% if (errors) { %>
            <ul class="alert alert-danger">
                <% errors.array({ onlyFirstError: true }).forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>
    </div>
    <div>
        <div class="loader-container align-center d-flex"><span class="loader"></span></div>
        <table id="userDisplay"></table>
        <noscript>JavaScript must be enabled to use this page.</noscript>
        <script src="../../js/user.js" defer></script>
    </div>
</div>
