<div class="delete-inventory-content">
    <h2><%= title %></h2>
    <div>
        <%- messages() %>
        <% if (errors) { %>
            <ul class="alert alert-danger">
                <% errors.array({ onlyFirstError: true }).forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>
    </div>
    <div>
        <form action="/inv/delete" method="post">
            <div class="form-group">
                <input type="hidden" name="inv_id" <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
                <label for="inv_make">
                    Make
                    <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>" readonly>
                </label>
                <label for="inv_model">
                    Model
                    <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>" readonly>
                </label>
                <label for="inv_price">
                    Price
                    <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>" min="1" step="any" readonly>
                </label>
                <label for="inv_year">
                    Year
                    <input type="number" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>" step="1" readonly>
                </label>
            </div>
            <button type="submit" class="btn btn-danger delete-inventory-button">Delete Inventory</button>
            <div class="required-field-note">Confirm Deletion - The delete is permanent.</div>
        </form>
    </div>
</div>
